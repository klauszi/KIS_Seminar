\mode<presentation>

\AtBeginDocument{
  {
    \colorlet{global.bg}{bg}
    \usebeamercolor{title in head/foot}
    \usebeamercolor{author in head/foot}
    \pgfdeclarehorizontalshading{beamer@titletbshade}{0.3cm}{%
      color(0pt)=(title in head/foot.bg);%
      color(\paperwidth)=(author in head/foot.bg)%
    }
    \pgfdeclarehorizontalshading{beamer@shadetitle}{0.1cm}{%
      color(0.5cm)=(title in head/foot.bg);%
      color(\paperwidth-0.5cm)=(author in head/foot.bg)%
    }
  }
}

\defbeamertemplate*{title page}{vsis theme}[1][]
{
  \hspace*{-\beamer@leftmargin}\pgfuseshading{beamer@titletbshade}%
  \vskip8pt plus 3filll
  \begin{centering}
    \begin{beamercolorbox}[sep=0pt,center,#1]{title}
      \usebeamerfont{title}\inserttitle\par%
      \ifx\insertsubtitle\@empty%
      \else%
        \vskip0.75em%
        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
      \fi%     
    \end{beamercolorbox}%
    \vskip0pt plus 3filll%
    \hspace*{-\beamer@leftmargin}\pgfuseshading{beamer@shadetitle}%
    \vskip1em\par
    \begin{beamercolorbox}[sep=8pt,center,#1]{author}
      \usebeamerfont{author}\insertauthor
    \end{beamercolorbox}
    \begin{beamercolorbox}[sep=8pt,center,#1]{institute}
      \usebeamerfont{institute}\insertinstitute
    \end{beamercolorbox}
    \begin{beamercolorbox}[sep=8pt,center,#1]{date}
      \usebeamerfont{date}\insertdate
    \end{beamercolorbox}\vskip0.5em
    {\usebeamercolor[fg]{titlegraphic}\begin{minipage}{1.5cm}\includegraphics[height=1.5cm]{vsis.pdf}\end{minipage}\hfill\begin{minipage}{8cm}\centering\inserttitlegraphic\end{minipage}\hfill\begin{minipage}{1.5cm}\includegraphics[height=1.5cm]{uhh.pdf}\end{minipage}\par}
  \end{centering}
  \vskip0pt plus 1filll
  \hspace*{-\beamer@leftmargin}\pgfuseshading{beamer@titletbshade}%
}


\mode<all>
